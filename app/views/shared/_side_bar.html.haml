.aside
  .aside__user
    .aside__user_name
      = current_user.name
    .aside__user_icon
      .aside__user_icon_btn
        =link_to edit_user_path(current_user) do
          = icon("fas","edit") 
        = link_to new_group_path do
          = icon('fas', 'cog', class: 'icon')
  .aside__group
    - current_user.groups.each do |group|
      .aside__group_room
        = link_to group_messages_path(group) do
          .aside__group_room_title
            = group.name
          .aside__group_room_title_text
            = group.show_last_message